<div class="container">
  <% if @ships.empty? %>
    <h1>No Ships In queue!</h1>
  <% else %>
    <h1>Ships In queue</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Ship ID</th>
          <th>Ship name</th>
          <th>Origin</th>
          <th>Passengers</th>
          <th>Status</th>
          <th>View logs</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @ships.each do |ship| %>
          <tr>
            <td><%= ship.id %></td>
            <td><%= ship.name %></td>
            <td><%= ship.origin %></td>
            <td><%= ship.passengers_count %></td>
            <td><%= ship.status %></td>
            <td><%= link_to 'view logs', ship_path(ship)%></td>
            <td><%= link_to 'delete', ship_path(ship), method: :delete,
                    data: { confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>
